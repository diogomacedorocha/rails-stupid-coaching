<div class="container">
  <h1>Ask your coach anything</h1>

  <%= form_with url: answer_path, method: :get, local: true do %>
    <%= text_field_tag :question, nil, class: "form-control", placeholder: "Type your question here", autofocus: true %>
    <%= submit_tag "Ask!", class: "btn btn-primary w-100 mt-3" %>
  <% end %>
</div>
